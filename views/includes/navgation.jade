mixin navbar(menus, title)
  nav#main-nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    .container
      button.navbar-header.navbar-toggle(data-toggle="collapse" data-target=".navbar-collapse")
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/")= title
      .collapse.navbar-collapse.nav-menu
        ul.nav.navbar-nav
          each menu, i in menus
            li
              a(href="#{menu.url}" title="menu.intro")
                i(class="#{menu.icon}")= menu.title